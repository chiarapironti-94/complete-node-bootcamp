{
  "compilerOptions": {
    "target": "es2016",                      
    "module": "commonjs",                    
    "rootDir": "src",                         // Where your .ts files are located
    "outDir": "dist",                         // Where compiled .js files go
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                   // Include all .ts in src/
  "exclude": ["node_modules", "dist"]        // Skip these folders
}